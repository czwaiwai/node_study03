<%- include header %>
<div class="container">
  <div class="span twelve">
    <h3 style="border-bottom:2px solid; "><%= title %></h3>
  </div>
  <div class="row">
    <%- include left %>
    <div class="span nine">
      <% if(error){ %><div class="alert danger" > <%= error %></div><% } %>
      <% if(success){ %><div class="alert success"><%= success %></div><% } %>
      <ul>
        <% var lastYear=0; %>
        <% var lastDay=0; %>
        <% posts.forEach(function(post,index){ %>
          <% if(lastYear != post.time.year ){%>
                <li><h3><%=post.time.year %></h3></li>
                <% lastYear = post.time.year %>
          <% } %>
          <% if(lastDay != post.time.day){ %>
          <li><time><%=post.time.day %></time></li>
            <% lastDay = post.time.day %>
          <% }%>
          <li><a href="/u/<%=post.name %>/<%=post.time.day %>/<%=post.title %>" ><%=post.title %></a></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
<%- include footer %>